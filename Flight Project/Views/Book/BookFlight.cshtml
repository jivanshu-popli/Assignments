@model flightproject2.Models.BookingsJivanshu

@{
    ViewData["Title"] = "BookFlight";
    Layout="~/Views/Shared/_AllFlightsLayout.cshtml";
}

<h1>Enter Details and Confirm</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BookFlight">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NoOfPassengers" class="control-label"></label>
                <input asp-for="NoOfPassengers" class="form-control" />
                <span asp-validation-for="NoOfPassengers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm Booking" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
